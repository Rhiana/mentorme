<%= form_tag({:controller => 'profiles', :action => 'search'}, {:method => :get, :class => "form-horizontal"}) do %>
<div class="form-group">
    <%= text_field_tag :search, params[:search], :id => 'search_field', :class => "form-control" %>
    <%= link_to_function "Clear", "$('#search_field').val('')" %>
</div>
<div class="form-group">
	<div class="radio">
    <%= label_tag :person_mentor, "Mentor" %><%= radio_button_tag :person, :mentor, params[:person]=="mentor" %>
    </div>
    <div class="radio">
    <%= label_tag :person_mentee, "Mentee" %><%= radio_button_tag :person, :mentee, params[:person]=="mentee" %>
    </div>
    <div class="radio">
    <%= label_tag :person_all, "All" %><%= radio_button_tag :person, :all, params[:person]=="all" %>
    </div>
</div>
    <%= submit_tag "Search", :class => "btn btn-default", :name => nil %>
<% end %>
<div>
<%= button_to "Reset", profiles_path, :class => "btn btn-default", :method => :get %>
</div>